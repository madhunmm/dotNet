package driver;
import java.io.*;
import java.util.*;
import javax.swing.JComboBox;
class Nanagram
{
    int count;
    Starter st = new Starter();
    void find(JComboBox combo1,Structure word1,ArrayList<String>[][] list1,int len)
    {
        int i,j,a,b,ind,counter;
        count=0;
        if(len<=2)
            b=0;
        else if(len==3)
            b=1;
        else if(len==4)
            b=2;
        else if(len==5)
            b=3;
        else if(len==6)
            b=4;
        else if(len==7)
            b=5;
        else if(len==8)
            b=6;
        else if(len==9)
            b=7;
        else if(len==10)
            b=8;
        else if(len==11)
            b=9;
        else if(len==12)
            b=10;
        else if(len==13)
            b=11;
        else if(len==14)
            b=12;
        else if(len==15)
            b=13;
        else
            b=14;
        for(a=0;a<26;a++)
        {
            for(i=0;i<list1[a][b].size();i++)
            {
                Structure temp = new Structure();
                temp = st.createStructure(list1[a][b].get(i).toString());
                if(word1.alpha.size()==temp.alpha.size())
                {
                    counter =0;
                    for(j=0;j<word1.alpha.size();j++)
                    {
                        ind=temp.alpha.indexOf(word1.alpha.get(j));
                        if(ind!=-1)
                        {
                            if(temp.number.get(ind).equals(word1.number.get(j)))
                            {
                                counter++;
                            }
                        }
                    }
                    if(counter==word1.alpha.size())
                    {
                        combo1.addItem(temp.word);
                        count++;
                    }
                }
            }
       }
    }
}
